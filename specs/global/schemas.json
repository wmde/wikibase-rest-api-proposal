{
    "Labels": {
        "type": "object",
        "additionalProperties": {
            "$ref": "./schemas.json#/Term"
        },
        "example": {
            "en": {
                "language": "en",
                "value": "Douglas Adams"
            },
            "fr": {
                "language": "fr",
                "value": "Douglas Adams"
            }
        }
    },
    "Descriptions": {
        "type": "object",
        "additionalProperties": {
            "$ref": "./schemas.json#/Term"
        },
        "example": {
            "en": {
                "language": "en",
                "value": "Science-fiction writer"
            },
            "fr": {
                "language": "fr",
                "value": "écrivain de science-fiction"
            }
        }
    },
    "Aliases": {
        "type": "object",
        "additionalProperties": {
            "$ref": "./payloads.json#/AliasList"
        },
        "example": {
            "en": [
                {
                    "language": "en",
                    "value": "Douglas Noel Adams"
                },
                {
                    "language": "en",
                    "value": "Douglas Noël Adams"
                }
            ],
            "fr": [
                {
                    "language": "fr",
                    "value": "Douglas Noel Adams"
                }
            ]
        }
    },
    "Sitelink": {
        "type": "object",
        "properties": {
            "site": {
                "type": "string"
            },
            "title": {
                "type": "string"
            },
            "badges": {
                "type": "array",
                "items": { "type": "string" }
            }
        }
    },
    "Item": {
        "allOf": [
            {
                "$ref": "./interfaces.json#/Entity"
            },
            {
                "$ref": "./interfaces.json#/Fingerprintable"
            },
            {
                "$ref": "./interfaces.json#/StatementsBearing"
            },
            {
                "$ref": "./interfaces.json#/SitelinkBearing"
            }
        ]
    },
    "Property": {
        "allOf": [
            {
                "$ref": "./interfaces.json#/Entity"
            },
            {
                "$ref": "./interfaces.json#/Fingerprintable"
            },
            {
                "$ref": "./interfaces.json#/StatementsBearing"
            },
            {
                "type": "object",
                "properties": {
                    "datatype": {
                        "type": "string"
                    }
                },
                "required": [
                    "datatype"
                ]
            }
        ]
    },
    "Term": {
        "type": "object",
        "properties": {
            "language": {
                "type": "string"
            },
            "value": {
                "type": "string"
            }
        },
        "required": [
            "language",
            "value"
        ]
    },
    "Snak":{
        "$ref": "./interfaces.json#/Snak"
    },
    "Statement": {
        "type": "object",
        "properties": {
            "mainsnak" : {
                "$ref": "#/Snak"
            },
            "id": {
                "type": "string"
            },
            "rank": {
                "type": "string"
            },
            "qualifiers": {
                "$ref": "./interfaces.json#/HashedSnaks"
            },
            "qualifiers-order": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "references": {
                "type": "array",
                "items": { "$ref": "./schemas.json#/Reference" }
            }
        }
    },
    "Qualifier": {
        "allOf": [
            { "$ref": "./interfaces.json#/HashBearing"},
            { "$ref": "./interfaces.json#/Snak" }
        ]
    },
    "Reference": {
        "allOf": [
            { "$ref": "./interfaces.json#/HashBearing"},
            {
                "type": "object",
                "properties": {
                    "snaks": {
                        "$ref": "./interfaces.json#/Snaks"
                    },
                    "snaks-order": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        ]
    } 
}