{
    "get": {
        "tags": [ "entities" ],
        "summary": "Retrieves an entity's description by language",
        "parameters": [
            { "$ref": "../../../parameters.json#/entityType" },
            { "$ref": "../../../parameters.json#/entityId" },
            { "$ref": "../../../parameters.json#/lang" }
        ],
        "responses": {
            "200": { "$ref": "../../../responses.json#/EntityDescription" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    },
    "put": {
        "tags": ["entities"],
        "summary": "Add / Replace a description to an entity by language",
        "parameters": [
            { "$ref": "../../../parameters.json#/entityType" },
            { "$ref": "../../../parameters.json#/entityId" },
            { "$ref": "../../../parameters.json#/lang" }
        ],
        "requestBody": { "$ref": "../../../requests.json#/EditTerm" },
        "responses": {
            "200": { "$ref": "../../../responses.json#/EntityDescription" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    },
    "delete": {
        "tags": [ "entities" ],
        "summary": "Deletes an entity's description by language",
        "parameters": [
            { "$ref": "../../../parameters.json#/entityType" },
            { "$ref": "../../../parameters.json#/entityId" },
            { "$ref": "../../../parameters.json#/lang" }
        ],
        "responses": {
            "200": { "$ref": "../../../responses.json#/OK" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    }
}