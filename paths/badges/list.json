{
    "get": {
        "tags": ["badges"],
        "summary": "Retrieve a list of sitelink Badges",
        "parameters": [
            { "$ref": "../../parameters.json#/offset" },
            { "$ref": "../../parameters.json#/page" },
            { "$ref": "../../parameters.json#/per_page" }
        ],
        "responses": {
            "200": { 
                "description": "A list of wikibase item ids which define sitelink badges",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "array",
                            "items": { "type": "string" } 
                        }
                    }
                }
            },
            "404": { "$ref": "../../responses.json#/NotFound" },
            "default": { "$ref": "../../responses.json#/UnexpectedError" }
        }
    }
}