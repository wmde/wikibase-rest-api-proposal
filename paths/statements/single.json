{
    "get": {
        "tags": [ "statements" ],
        "summary": "Single statement from an entity (items | properties)",
        "description": "This endpoint is also accessible through `/entities/(items|properties)/{entityId}/statements/{statementId}`",
        "parameters": [
            { "$ref": "../../parameters.json#/statementId" },
            { "$ref": "../../parameters.json#/fields" }
        ],
        "responses": {
            "200": { "$ref": "../../responses.json#/StatementList" },
            "404": { "$ref": "../../responses.json#/NotFound" },
            "default": { "$ref": "../../responses.json#/UnexpectedError" }
        }
    },
    "put": {
        "tags": ["statements"],
        "summary": "Replace a Wikibase Statement by Id",
        "requestBody": { "$ref": "../../requests.json#/Statement" },
        "responses": {
            "200": { 
                "description": "Wikibase Statement ID",
                "content": {
                    "application/json": {
                        "schema": { "type": "string" }
                    }
                }
             },
            "404": { "$ref": "../../responses.json#/NotFound" },
            "default": { "$ref": "../../responses.json#/UnexpectedError" }
        }
    }
}