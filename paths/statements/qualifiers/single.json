{
    "get": {
        "tags": [ "statements" ],
        "summary": "Single qualifier by hash",
        "parameters": [
            { "$ref": "../../../parameters.json#/statementId" },
            { "$ref": "../../../parameters.json#/qualifierHash" },
            { "$ref": "../../../parameters.json#/fields" }
        ],
        "responses": {
            "200": { "$ref": "../../../responses.json#/Snak" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    },
    "post": {
        "tags": ["statements"],
        "summary": "Update a qualifier",
        "parameters": [
            { "$ref": "../../../parameters.json#/qualifierHash" }
        ],
        "requestBody": { "$ref": "../../../requests.json#/Qualifier" },
        "responses": {
            "200": { "$ref": "../../../responses.json#/QualifierHash" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    }
}