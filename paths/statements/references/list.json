{
    "get": {
        "tags": [ "statements" ],
        "summary": "Lists references for a Statement",
        "description": "This endpoint is also accessible through `/entities/(items|properties)/{entityId}/statements/{statementId}/references`",
        "parameters": [
            { "$ref": "../../../parameters.json#/statementId" },
            { "$ref": "../../../parameters.json#/fields" },
            { "$ref": "../../../parameters.json#/offset" },
            { "$ref": "../../../parameters.json#/page" },
            { "$ref": "../../../parameters.json#/per_page" }
        ],
        "responses": {
            "200": { "$ref": "../../../responses.json#/SnakMapList" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    },
    "post": {
        "tags": ["statements"],
        "summary": "Add a new Reference to a Statement",
        "requestBody": { "$ref": "../../../requests.json#/Reference" },
        "responses": {
            "200": { "$ref": "../../../responses.json#/ReferenceHash" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    }
}