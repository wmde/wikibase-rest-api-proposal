{
    "get": {
        "tags": ["statements"],
        "summary": "Retrieve a list of entity Statements",
        "parameters": [
            { "$ref": "../../parameters.json#/entityId" },
            { "$ref": "../../parameters.json#/fields" },
            { "$ref": "../../parameters.json#/offset" },
            { "$ref": "../../parameters.json#/page" },
            { "$ref": "../../parameters.json#/per_page" }
        ],
        "responses": {
            "200": { "$ref": "../../responses.json#/StatementList" },
            "404": { "$ref": "../../responses.json#/NotFound" },
            "default": { "$ref": "../../responses.json#/UnexpectedError" }
        }
    },
    "post": {
        "tags": ["statements"],
        "summary": "Add a new Statement to an entity (Item | Property)",
        "requestBody": { "$ref": "../../requests.json#/Statement" }
    }
}