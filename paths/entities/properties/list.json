{
    "get": {
        "tags": ["properties"],
        "summary": "Retrieve a list of Wikibase Properties",
        "parameters": [
            { "$ref": "../../../parameters.json#/fields" },
            { "$ref": "../../../parameters.json#/offset" },
            { "$ref": "../../../parameters.json#/page" },
            { "$ref": "../../../parameters.json#/per_page" }
        ],
        "responses": {
            "200": { "$ref": "../../../responses.json#/PropertyList" },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    },
    "post": {
        "tags": ["properties"],
        "summary": "Create a new Wikibase Property",
        "requestBody": { "$ref": "../../../requests.json#/Property" },
        "responses": {
            "200": { 
                "description": "A Wikibase Entity ID",
                "content": {
                    "application/json": {
                        "schema": { "type": "string" }
                    }
                }
             },
            "404": { "$ref": "../../../responses.json#/NotFound" },
            "default": { "$ref": "../../../responses.json#/UnexpectedError" }
        }
    }
}